#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('cleanup'){
            steps{
                deleteDir()
                dir("${workspace}@tmp"){
                    deleteDir()
                }
            }
        }
        stage('debug'){
            steps{
                sh 'printenv'
            }
        }
        stage('SCM: checkout'){
            steps{
                checkout scm
                git url: 'https://github.com/andreaswendlandt/gotham.git'
                sh "git pull origin master"
            }
        }
        //#stage('Shellcheck unix_file_permission_converter') {
        //   steps {
        //       sh "shellcheck unix_file_permission_converter/*.sh"
        //   }
        // }
        stage('install cronguard wrapper') {
            steps {
                sh "dpkg -i cronguard/packages/cronguard-wrapper_1.0-1.deb"
            }
        }
        stage('install cronguard daemon') {
            steps {
                sh "dpkg -i cronguard/packages/cronguard-daemon_1.0-1.deb"
            }
        }
    }
}
